{
  "manifest_version": 3,
  "name": "Resumes updater",
  "version": "0.3",
  "description": "Простейший автокликер для автоматического подъема ваших резюме в поиске работодателей на сайте hh.ru. Разработано @2024 L.A.P.S. Lab",
  "author": "sovtem@gmail.com",
  "icons": {
    "192": "/public/logo192.png",
    "512": "/public/logo512.png"
  },
  "background": {
    "service_worker": "./src/service_workers/background.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "192": "/public/logo192.png"
    },
    "default_title": "Resumes updater",
    "default_popup": "./public/index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.hh.ru/applicant/resumes*"],
      "js": ["./src/js/autoclicker.js"]
    }
  ]
}
